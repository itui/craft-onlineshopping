    <db:config name="Database_Config" doc:name="Database Config" doc:id="75a0dd4d-2fc9-41d8-8a1e-3d628eccdd11" >
		<db:my-sql-connection host="localhost" port="3306" user="root" password="sqldata2020" database="apikitassignment" />
	</db:config>
	<db:config name="Database_Config1" doc:name="Database Config" doc:id="9ce6419d-7751-403c-bb2e-21df0ef9a4a9" >
