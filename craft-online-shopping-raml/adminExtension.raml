  type:
    collection:
      resourcePathName: categories
      resourcePath: cayegories
  
  get:
    responses:
      200:
        body:
          application/json:
            type: myLib.categories[]
            example: !include examples/categories.json
             
    is: 
    - myLib.userQueryParams:   
  post:
    description: creates category
    responses:
      200:
        body:
          application/json:
            example:
              {
                message: "category created"
              }
    is: 
    - myLib.createdResponse:  
  put:
    description: Update the category information 
